}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}
.td {
    width:25%;
    justify-content: center;
    text-align: center;
}
.td-first{
  color: orange;
}
.td-second{
  color: red;
}
.td-three{
  color: green;
}
.td-four{
  color: black;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}
.label-custom{
  margin-left: 12px;
  color: lightgray;
}
